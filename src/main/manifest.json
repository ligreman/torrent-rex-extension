{
    "name": "T-Rex",
    "short_name": "T-Rex",
    "version": "2.1.0",
    "manifest_version": 2,
    "description": "The byte predator, feared all around the universe.",
    "icons": {
        "128": "icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/defaultIcon19x19.png",
            "38": "images/defaultIcon38x38.png"
        },
        "default_popup": "index.html",
        "default_title": "T-Rex"
    },
    "background": {
        "scripts": [
            "js/events.js"
        ],
        "persistent": true
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "minimum_chrome_version": "18",
    "permissions": [
        "downloads",
        "storage",
        "alarms",
        "notifications",
        "tabs",
        "http://trex2-crystaltales.rhcloud.com/api/trex/*"
    ]
}
